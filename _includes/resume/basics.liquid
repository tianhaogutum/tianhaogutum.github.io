{% if data.name %}
  <div class="basics-info mb-3">
    <div class="name-section text-center mb-4">
      <h2 class="full-name mb-2">{{ data.name }}</h2>
      {% if data.label %}
        <p class="label mb-3" style="font-size: 1.1rem; color: var(--global-text-color-light);">{{ data.label }}</p>
      {% endif %}
    </div>

    <div class="contact-grid">
      {% if data.email %}
        <div class="contact-item">
          <i class="fa-solid fa-envelope contact-icon"></i>
          <div class="contact-details">
            <div class="contact-label">Email</div>
            <div class="contact-value">{{ data.email }}</div>
          </div>
        </div>
      {% endif %}

      {% if data.phone %}
        <div class="contact-item">
          <i class="fa-solid fa-phone contact-icon"></i>
          <div class="contact-details">
            <div class="contact-label">Phone</div>
            <div class="contact-value">{{ data.phone }}</div>
          </div>
        </div>
      {% endif %}

      {% if data.url %}
        <div class="contact-item">
          <i class="fa-solid fa-globe contact-icon"></i>
          <div class="contact-details">
            <div class="contact-label">Website</div>
            <div class="contact-value">{{ data.url }}</div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
